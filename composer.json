{
    "name": "firevel/firestore-mirror",
    "description": "Mirror Laravel model inside Firestore collection.",
    "keywords": ["laravel", "firevel", "model", "firestore"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Slowik",
            "email": "michael.slowik@firevel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Firevel\\FirestoreMirror\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Firevel\\FirestoreMirror\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Firevel\\FirestoreMirror\\FirestoreMirrorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "require": {
        "firevel/firestore": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}